# ── Required for LLM features ─────────────────────────────────────────────
# OpenAI API key (used for gpt-*, o1, o3, o4 models)
OPENAI_API_KEY=sk-...
#GEMINI_API_KEY=AIzaSyD...

# If using Gemini via LiteLLM instead:
# GEMINI_API_KEY=...

# ── Optional overrides ─────────────────────────────────────────────────────
# LLM model (default: gpt-5-mini). Use LLM_MODEL or OPENAI_MODEL.
# Examples: gpt-4o-mini, gpt-4o, gemini/gemini-2.0-flash
LLM_MODEL=gpt-5-mini
#LLM_MODEL=gemini/gemini-2.0-flash
# Base directory for cloned repos and SQLite DB (default: ./data)
DATA_DIR=./data

# SQLite database URL (default: sqlite:///<DATA_DIR>/repos.db)
DATABASE_URL=sqlite:///./data/repos.db

# Enable Flask debug mode (default: false)
DEBUG=false

# ── Subsystem clustering (optional) ────────────────────────────────────────
# SUBSYSTEM_CLUSTER_MAX_BATCHES=30
# SUBSYSTEM_CLUSTER_MAX_ROUNDS=5
# SUBSYSTEM_CLUSTER_MAX_CONCURRENCY=4
# SUBSYSTEM_CLUSTER_STABILITY_THRESHOLD=0.9
